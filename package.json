{
  "name": "Sakura",
  "version": "0.0.1",
  "description": "Sakura Wallet is a secure and user-friendly Polkadot desktop wallet",
  "license": "GPL v3",
  "author": {
    "name": "W3 Finance",
    "email": "hizhaoyun@gmail.com"
  },
  "private": true,
  "homepage": "./",
  "main": "public/electron.js",
  "scripts": {
    "start": "export BROWSER=none && react-scripts start",
    "start:win": "set BROWSER=none && react-scripts start",
    "build": "react-scripts build",
    "pack": "electron-builder --dir",
    "dev": "export ELECTRON_START_URL=http://localhost:3000 && electron .",
    "dev:win": "set ELECTRON_START_URL=http://localhost:3000 && electron .",
    "dist": "yarn build && rm -rf dist && electron-builder build --mac",
    "dist:win": "yarn build && rd /s/q dist && electron-builder build --win --x64",
    "dist:linux": "yarn build && rm -rf dist && electron-builder build --linux"
  },
  "dependencies": {
    "electron-store": "^5.1.1",
    "react-scripts": "3.4.0"
  },
  "devDependencies": {
    "@material-ui/core": "^4.9.7",
    "@material-ui/icons": "^4.9.1",
    "@material-ui/lab": "^4.0.0-alpha.46",
    "@polkadot/api": "1.7.1",
    "@polkadot/keyring": "2.6.2",
    "@polkadot/util-crypto": "2.6.2",
    "electron": "8.1.1",
    "electron-builder": "^22.4.1",
    "i18next": "^19.3.2",
    "notistack": "^0.9.9",
    "react": "^16.13.0",
    "react-dom": "^16.13.0",
    "react-i18next": "^11.3.3",
    "react-router": "^5.1.2",
    "react-router-dom": "^5.1.2"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
